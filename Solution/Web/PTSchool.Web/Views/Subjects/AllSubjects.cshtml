@model PTSchool.Web.Models.Subject.CollectionSubjectsFullViewModels

@{
    ViewData["Title"] = "AllSubjects";
}

@{ 
    int index = 0;
}

<div class="row">
    <div class="col-md-2 bg-info text-white">
        <h1 class="text-center mx-auto d-block">All Subjects</h1>
        <hr />
    </div>
    <div class="col-md-10">
        <table class="table table-striped table-bordered">
            <tr>
                <th>#</th>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                @*<th>Teachers</th>*@
            </tr>
            @foreach (var item in @Model.AllSubjectsFull)
            {
                index++;

                <tr>
                    <td>@index</td>
                    <td>
                        <a href="@Url.Action("Subject", "Subjects", new { id =item.Id })">
                            <img class="rounded-circle" src="data:image/jpg;base64,@Convert.ToBase64String(item.ImageXS)" alt="subject" width="100" height="100">
                        </a>
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    @*<td>
                        @for (int i = 0; i < item.TeachersIds.Count(); i++)
                        {
                            <a href="@Url.Action("Teacher", "Teachers", new { id = item.TeachersIds.ToList()[i] })">
                                <img class="rounded-circle" src="data:image/jpg;base64,@Convert.ToBase64String(item.TeachersImagesXXS.ToList()[i])" alt="teacher" width="50" height="50">
                            </a>
                        }
                    </td>*@
                </tr>
            }
        </table>
    </div>
</div>