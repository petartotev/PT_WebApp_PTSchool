@using Microsoft.AspNetCore.Identity
@inject SignInManager<PTSchool.Data.Models.User> SignInManager
@inject UserManager<PTSchool.Data.Models.User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link btn bg-white text-dark" asp-area="" asp-controller="Home" asp-action="Chat">SchoolChat!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-light">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <!--<a class="text-dark" - changed!-->
            @*<a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>*@
            <a class="nav-link text-secondary" href="@Url.Action("RegisterPolicy", "Home")">Register</a>
</li>
        <li class="nav-item">
            <!--<a class="text-dark" - changed!-->
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>