@model PTSchool.Web.Models.Abstracts.PersonEntity

<div class="card">
    <div class="card-header">
        <h5 class="card-title">Contacts</h5>
        <p class="card-category">Here you will find the contacts of @Model.FirstName.</p>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead class="text-primary">
                    <tr>
                        <th>Type</th>
                        <th>Data</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Address</td>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <td>Phone</td>
                        <td>@Model.Phone</td>
                    </tr>
                    @if (Model.PhoneEmergency != null)
                    {
                        <tr>
                            <td>Phone Emergency</td>
                            <td>@Model.PhoneEmergency</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>