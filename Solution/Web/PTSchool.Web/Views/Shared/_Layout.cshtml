@{ 
    string title = string.Empty;
    string url = Context.Request.Path;

    if (url != null && url != "/")
    {
        string[] urlSections = Context.Request.Path.ToString().Split('/').ToArray();
        title = (urlSections != null && urlSections.Length > 0) ? string.Join(" / ", urlSections.Skip(1).Take(1)) : "Home";
    }
    else
    {
        title = "Home";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--<title>, <meta name="description" content="..."/>, <meta name="description" content="..."/> are obligatory for a better Google Search recognition...-->
    <title>@ViewData["Title"] / PTSchool</title>
    <meta name="description" conent="PTSchool is a platform that makes communication between Teachers, Students and Parents easy! Based on priority, parents receive notifications about their child's grades and notes. Sending a message between two of these T-S-P. Authentication and authorization guarantees security." />
    <meta name="keywords" content="PT, School, Teachers, Parents, Students, Education, Platform" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
