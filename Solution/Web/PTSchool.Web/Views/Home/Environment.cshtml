@{
    ViewData["Title"] = "Environment";
}

<div class="text-center">
    <h1 class="display-4">@Environment.OSVersion</h1>
    <dl class="row">
        @foreach(var property in typeof(Environment).GetProperties().OrderBy(x => x.Name))
        {
            <dt class="col-sm-3">@property.Name</dt>
            <dd class="col-sm-9">@property.GetValue(null, null)</dd>
        }
    </dl>
</div>