@{
    ViewData["Title"] = "EmailError";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col md-8 text-center">
        <div class="card p-3 ">
            <h3 class="text-primary text-center">Sorry, your message was not sent.</h3>
            <div class="text-center">
                <img src="~/images/gifs/fail.gif" width="540" />
            </div>
            <br />
            <h4 class="text-primary text-center">Please, try again later!</h4>
            <br />
            <div>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-lg btn-round btn-primary"><i class="nc-icon nc-minimal-left"></i> BACK</a>
            </div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
