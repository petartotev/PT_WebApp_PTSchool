@model PTSchool.Web.Models.Student.StudentFullViewModel

<div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-5">
            <partial name="_ProfilePersonGeneralPartial" model="@Model" />
            <partial name="_ProfilePersonContactsPartial" model="@Model" />
        </div>
        <div class="col-md-5">
            <div class="border border-dark">
                <p>Average Score</p>
                <h1>@Model.AverageScore</h1>
            </div>
            <div class="border border-dark">
                <p>Average Behavior</p>
                <h1>@Model.AverageBehavior</h1>
            </div>
            <div class="border border-dark">
                <p>Parents</p>
                <table class="table table-striped">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Image</th>
                    </tr>
                    @foreach (var item in Model.Parents)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FirstName @item.MiddleName[0]. @item.LastName</td>
                            <td>
                                <a href="@Url.Action("Parent", "Parents", new { id = item.Id })"><img src="@item.Image" height="50" class="img-circle-100" /></a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="border border-dark">
                <p>Class</p>
                <table class="table table-striped ">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Image</th>
                    </tr>
                    <tr>
                        <td>@Model.Class.Id</td>
                        <td>@Model.Class.Name</td>
                        <td>
                            <a href="@Url.Action("Class", "Classes", new { id = Model.Class.Id })"><img src="@Model.Class.Image" height="50" class="img-circle-100" /></a>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="border border-dark">
                <p>Clubs</p>
                <table class="table table-striped ">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Image</th>
                    </tr>
                    @foreach (var item in Model.Clubs)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="@Url.Action("Club", "Clubs", new { id = item.Id })"><img src="@item.Image" height="50" class="img-circle-100" /></a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="border border-dark">
                <p>School Council</p>
                <table class="table table-striped ">
                    <tr>
                        <th>School Council Member</th>
                        <td>@(Model.IsSchoolCouncilMember ? "✔️" : "❌")</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>