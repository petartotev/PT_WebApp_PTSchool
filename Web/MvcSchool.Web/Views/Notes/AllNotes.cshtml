@model MvcSchool.Web.Models.Note.AllNoteProfilesFullViewModel

@{
    ViewData["Title"] = "AllNotes";
}

<div class="row">
    <div class="col-md-2 bg-success text-white">
        <h1 class="text-center mx-auto d-block">Notes</h1>
        <hr />
        <a href="@Url.Action("Student", "Students", new { id = @Model.NoteProfilesFull.First().StudentId })">
            <img class="rounded-circle mx-auto d-block" src="data:image/jpg;base64,@Convert.ToBase64String(@Model.NoteProfilesFull.First().StudentImageM)" alt="Student" width="300" height="300">
        </a>
        <h3 class="text-center mx-auto d-block"><strong>@Model.NoteProfilesFull.First().StudentName</strong></h3>
        <hr />
        @if (User.IsInRole("Teacher"))
        {
            <div class="container">
                <a class="btn btn-large btn-primary text-white mx-auto d-block" onclick="window.location='@Url.Action("AddNote", "Notes", new { id = Model.NoteProfilesFull.First().StudentId })'">ADD NOTE!</a>
            </div>
            <hr />
        }
    </div>
    <div class="col-md-10">
        @for (int i = 0; i < Model.NoteProfilesFull.Count(); i++)
        {
            <div class="container">
                <table class="table table-striped table-bordered bg-dark text-white">
                    <tr>
                        <td>Id</td>
                        <td>@Model.NoteProfilesFull.ToList()[i].Id</td>
                    </tr>
                    <tr>
                        <td>Subject</td>
                        <td>
                            <a href="@Url.Action("Subject", "Subjects", new { id = @Model.NoteProfilesFull.ToList()[i].SubjectId })">
                                <img class="rounded-circle" src="data:image/jpg;base64,@Convert.ToBase64String(@Model.NoteProfilesFull.ToList()[i].SubjectImageXXS)" alt="Student" width="50" height="50">
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td class="font-weight-bold">Status</td>
                        <td class="font-weight-bold text-warning">@Model.NoteProfilesFull.ToList()[i].StatusNote</td>
                    </tr>
                    <tr>
                        <td class="font-italic">Title</td>
                        <td class="font-italic">@Model.NoteProfilesFull.ToList()[i].Title</td>
                    </tr>
                    <tr>
                        <td class="font-italic">Comment</td>
                        <td class="font-italic">@Model.NoteProfilesFull.ToList()[i].Comment</td>
                    </tr>
                    <tr>
                        <td>Teacher</td>
                        <td>
                            <a href="@Url.Action("Teacher", "Teachers", new { id = @Model.NoteProfilesFull.ToList()[i].TeacherId })">
                                <img class="rounded-circle" src="data:image/jpg;base64,@Convert.ToBase64String(@Model.NoteProfilesFull.ToList()[i].TeacherImageXXS)" alt="Student" width="50" height="50">
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>DateReceived</td>
                        <td>@Model.NoteProfilesFull.ToList()[i].DateReceived</td>
                    </tr>
                    <tr>
                        <td>DateConfirmed</td>
                        <td>@Model.NoteProfilesFull.ToList()[i].DateConfirmed</td>
                    </tr>
                </table>
            </div>
        }
    </div>
</div>



